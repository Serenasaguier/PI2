<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>
        <% if (locals.user != undefined) { %>
            <%- include('./partials/headerLogeado') %>

        <% } else { %>
            <%- include('./partials/header') %>
        <% } %>

        

            <main>
                <section class="center main-content" class="textoRegular">
                    <% for( let i=0; i < mascotasPost.length; i++ ) { %>
                        <article class="post">
                            <div class="info-usuario ">
                                <img src="<%= mascotasPost[i].usuario.fotoPerfil%>" alt="" height="50px" width="50px">
                                <h4>
                                    <a href="/user/detalleUsuario/id/<%=mascotasPost[i].usuario.id%>" class="textoRegular">
                                        
                                        <%=mascotasPost[i].usuario.nombreUsuario%>
                                    </a>
                                </h4>
                            </div>
                            <div class="post-body">
                                <a href="/posteos/detallePost/id/<%=mascotasPost[i].id%>">
                                  <img src="<%=mascotasPost[i].imagen%>" alt="">
                                </a>
                            </div>
                            <ul class="post-reacciones">
                                <li>
                                    <i class="fa-regular fa-heart"></i>
                                </li>
                                <li>
                                    <i class="fa-regular fa-comment"></i>
                                </li>
                            </ul>
                            

                    <p class="textoRegular post-comentarios"> <%=mascotasPost[i].usuario.nombreUsuario%> : <%=mascotasPost[i].caption%>  </p>
                            <div class="post-comentarios">
                                <h4 class="textoRegular">Comentarios</h4>
                                <ul>
                                    <% for( let j=0; j < mascotasPost[i].length; j++ ) { %>
                                        <li>
                                            <a href="/user/detalleUsuario/id/<%=mascotasPost[i].usuario.id%>" class="textoRegular">
                                                <%= mascotasPost[i].comentarios.autor %> :
                                            </a>
                                            <span class="textoRegular">
                                                <%=mascotasPost[i].comentarios.comentario1 %>
                                            </span>
                                        </li>
                                        <% } %>

                                            <a href="/posteos/detallePost/id/<%=mascotasPost[i].id%>" class="textoRegular">Ver m√°s...</a>
                                </ul>
                            </div>
                        </article>
                        <% } %>


                </section>
            </main>

            <%- include('./partials/footer') %>

    </body>

</html>