<!DOCTYPE html>
<html lang="en">


<%- include('./partials/head') %>

    <body>
        <% if (locals.user != undefined) { %>
            <%- include('./partials/header') %>

        <% } else { %>
            <%- include('./partials/headerLogeado') %>
        <% } %>

        

            <main>
                <section class="center main-content" class="textoRegular">
                    <% for( let i=0; i < mascotas.length; i++ ) { %>
                        <article class="post">
                            <div class="info-usuario ">
                                <img src="<%= mascotas[i].fotoPerfil%>" alt="" height="50px" width="50px">
                                <h4>
                                    <a href="/user/detailuser/id/<%=mascotas[i].id_usuario%>" class="textoRegular">
                                        
                                        <%= mascotas[i].nombreUsuario %>
                                    </a>
                                </h4>
                            </div>
                            <div class="post-body">
                                <a href="/posteos/postdetail/id/<%=mascotas[i].id%>">
                                    <img src="<%=mascotas[i].imagen%>" alt="">
                                </a>
                            </div>
                            <ul class="post-reacciones">
                                <li>
                                    <i class="fa-regular fa-heart"></i>
                                </li>
                                <li>
                                    <i class="fa-regular fa-comment"></i>
                                </li>
                            </ul>
                            <div class="post-comentarios">
                                <h4 class="textoRegular">Comentarios</h4>
                                <ul>


                                    <% for( let j=0; j < mascotas[i].comentario.length; j++ ) { %>
                                        <li>
                                            <a href="/user/detailuser/id/<%=mascotas[i].comentario %>" class="textoRegular">
                                                <%= mascotas[i].comentario[j].autor %> :
                                            </a>
                                            <span class="textoRegular">
                                                <%=mascotas[i].comentario[j].comentario1 %>
                                            </span>
                                        </li>
                                        <% } %>

                                            <a href="/posteos/postdetail/id/ <%=mascotas[i].id %> " class="textoRegular">Ver m√°s...</a>
                                </ul>
                            </div>
                        </article>
                        <% } %>


                </section>
            </main>

            <%- include('./partials/footer') %>

    </body>

</html>