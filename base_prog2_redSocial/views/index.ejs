<!DOCTYPE html>
<html lang="en">


    <%- include('./partials/head') %>  

<body>
    <%- include('./partials/header') %> 

    <main>
        <section class="center main-content" class="textoRegular" >
            <% for( let i = 0; i < mascotas.length; i++ ) { %>
                <article class="post"  >
                    <div class="info-usuario ">
                        <img src="<%= mascotas[i].img%>" alt="" height="50px" width="50px">
                        <h4>
                            <a href="/user/detailuser/<%= mascotas[i].id %>"  class="textoRegular" ><%= mascotas[i].nombre %></a>
                        </h4>
                    </div>
                    <div class="post-body">
                        <a href="/posteos/postdetail">
                            <img src="<%= mascotas[i].img %>" alt="">
                        </a>
                    </div>
                    <ul class="post-reacciones">
                        <li>
                            <i class="fa-regular fa-heart"></i>
                        </li>
                        <li>
                            <i class="fa-regular fa-comment"></i>
                        </li>
                    </ul>
                    <div class="post-comentarios">
                        <h4 class="textoRegular" >Comentarios</h4>
                        <ul>
                            <li>
                                <a href="/user/detailuser" class="textoRegular" ><%= mascotas[i].nombre %> :</a>
                                <span class="textoRegular" ><%= mascotas[i].comentario %></span>
                            </li>
                            <li>
                                <a href="/user/detailuser" class="textoRegular" ><%= mascotas[i].nombre %>: </a>
                                <span  class="textoRegular" ><%= mascotas[i].comentario %></span>
                            </li>
                            <a href="/posteos/postdetail" class="textoRegular" >Ver m√°s...</a>
                        </ul>
                    </div>
                </article>
            <% } %> 
            
            
        </section>    
    </main>

    <%- include('./partials/footer') %> 

</body>

</html>