<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs') %> 

<body>
    <%- include('../partials/header.ejs') %> 

    <main>
        <div class="user-detail container">
            <section class="top main-content" class="textoRegular" >
                <img class="profile" src="https://via.placeholder.com/100x100" alt="">
                <div class="info-usuario">
                    <p> <%detalle[4].nombre%> </p> 
                    <a class="follow" href="">seguir</a>
                    <ul class="meta">
                        <li>100 post</li>
                        <li><%= detalle[4].seguidores%> seguidores</li>
                        <li><%= detalle[4].seguidos%> seguidos</li>
                    </ul>
                </div>
            </section>
            <section class="bottom">
    <% for( let i = 0; i < detalle.length; i++ ) { %>
        <article class="post">
                    <a href="/posteos/postdetail">
                        <img src="<%= detalle[4].img %>" alt="">
                    </a>
                </article>
    
    <% } %>

                
            </section>
        </div>
    </main>

    <%- include('../partials/footer.ejs') %>
</body>

</html>