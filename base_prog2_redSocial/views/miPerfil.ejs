<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %> 

    <main>
        <div class="user-detail container">
            <section class="top main-content">
                <img class="profile" src="<%= detalle[2].fotoPerfil %>" alt="" height="100px" width="100px" >
                <div class="info-usuario">
                    <p class="textoRegular" ><%= detalle[2].nombreUsuario %></p> 
                    <a class="follow" href="/user/edit"><i class="fa-solid fa-user-gear"></i></a>
                    <ul class="meta">
                        <li class="textoRegular" >100 post</li>
                        <li class="textoRegular" ><%= detalle[2].seguidores %> seguidores</li>
                        <li class="textoRegular" ><%= detalle[2].seguidos %> seguidos</li>
                    </ul>
                </div>
            </section>
            <section class="bottom">
                <% for( let i = 0; i < detalleImagen.length; i++ ) { %>
                    <article class="post">
                        <a href="/posteos/postdetail">
                            <img src="<%= detalleImagen[i].imagen %>" alt="">
                        </a>
                    </article>
                <% } %> 
            </section>
        </div>
    </main>

    <%- include('./partials/footer') %> 
</body>

</html>