<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %> 

    <main>
        
        <div class="post-detail container">

            <section class="center main-content post" class="textoRegular" >

                <div class="info-usuario">
                    <img src="<%= detalle[0].fotoPerfil%>" alt="" height="40px" width="40px">
                    <p><a href="/user/detailuser/id/<%=detalle[0].id_usuario%>" ><%= detalle[0].nombreUsuario %></a></p>
                </div>

                <img class="photo" src="<%= detalle[0].imagen %>" alt="" width="500px" height="600px">
            </section>
            
            
            <section class="right" class="textoRegular">
                <h4  >Comentarios</h4>
                
                <section class="comments"  >
                    <form action="" class="comment-form">
                        <input type="text" class="input" placeholder="Agregar comentario">
                        <button type="submit"  >Comentar</button>
                    </form>
                    <div>
                    <% for( let i = 0; i < posteos.length; i++ ) { %>

                        <article class="comment">
                            <a class="user" href="/user/detailuser/id/<%= posteos[i].id %> ">
                            <img src="<%= posteos[i].fotoPerfil %>" alt="" height="40px" width="40px">
                            
                          
                            
                            
                            <section class="content">

                                <p> hola:</p>
                               
                                <span class="text"> <%=  %></span>
                            </section>
                        </a>

                        </article>
                
                        <% } %>
                       
                    </div>
                </section>
            </section>
        </div>
    </main>

    <%- include('./partials/footer') %> 
</body>

</html>