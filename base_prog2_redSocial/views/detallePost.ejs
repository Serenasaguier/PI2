<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 

<body>
    <% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogeado') %>

    <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

    <main>
        
        <div class="post-detail container">

            <section class="center main-content post" class="textoRegular" >
               
                <div class="info-usuario">
                    <img src="<%= mascotasDetalle.usuario.fotoPerfil%>" alt="" height="40px" width="40px">
                    <p><a href="/user/detalleUsuario/id/<%=mascotasDetalle.id_usuarios%>" ><%= mascotasDetalle.usuario.nombreUsuario %></a></p>
                    
                </div>

                <img class="photo" src="<%= mascotasDetalle.imagen %>" alt="" width="500px" height="600px">

                <% if (locals.user && user.id == mascotasDetalle.id_usuarios) { %>
                    
                    <form class="form" action="/posteos/detallePost/id/<%= mascotasDetalle.id %>/delete" method="POST">
                        <button type="submit" class="buy-now-button"><i class="fa-solid fa-trash"></i></button>
                    </form>
                
                    <a href="/posteos/editarPost/id/<%= mascotasDetalle.id %>"><i class="fa-solid fa-pencil"></i></a>
                   <% } %>
                
            </section>
            
            <!---->
            <section class="right" class="textoRegular">
                <h4  >Comentarios</h4><p class="textoRegular post-comentarios"> <%=mascotasDetalle.usuario.nombreUsuario%> : <%=mascotasDetalle.caption%>  </p>
 
                <section class="comments"  >
                    <% if (locals.user && locals.user.id == mascotasDetalle.usuario.id) { %> 
                        <article>
                    <% for( let i = 0; i < comentado.length; i++ ) { %>
                    
                        <a href="/user/id/:<%=comentado.usuario[i].id%>"> <img src= "/public/images/<%=comentado.usuario[i].fotoPerfil%>" alt="img perfil"> </a>
                        <div>
                            <p>
                            <strong> <a href="/user/id/:<%=comentado.usuario[i].id%>"> <%=comentado.usuario[i].nombreUsuario%> </a> </strong> :
                                <%= comentado.usuario[i].comentario1 %> 
                            </p>
                            <p>
                                <strong> <a href="/user/id/:<%=comentado.usuario[i].id%>"> <%=comentado.usuario[i].nombreUsuario%> </a> </strong> :
                                    <%= comentado.usuario[i].comentario2 %> 
                                </p>
    
                        </div>                          
                            <% } %> 
                        </article>
                        <% } %>
                       
                </section>
               <% // if (locals.user && locals.user.id == mascotasDetalle.comentario.autor.id) { // %> 

              <form action="/posteos/detallePost/id" method="POST" class="comment-form">
                    <input type="text" class="input" placeholder="Agregar comentario" name="comentario">
                    <button type="submit"> Comentar </button> 
                </form>
                <% //} %> 

            </section>
        </div>
    </main>

    <%- include('./partials/footer') %> 
</body>

</html>