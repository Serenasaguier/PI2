<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %> 

<body>
    <%- include('./partials/header') %> 

    <main>
        <div class="post-detail container">
            <section class="center main-content post" class="textoRegular" >
                <div class="info-usuario">
                    <img src="<%= posteos[3].img %>" alt="" height="40px" width="40px">
                    <p><a href="/user/detailuser" ><%= posteos[3].nombre %></a></p>
                </div>
                <img class="photo" src="<%= posteos[3].img %>" alt="" width="500px" height="600px">
            </section>
            <section class="right" class="textoRegular">
                <h4  >Comentarios</h4>
               
                <section class="comments"  >
                    <form action="" class="comment-form">
                        <input type="text" class="input" placeholder="Agregar comentario">
                        <button type="submit"  >Comentar</button>
                    </form>
                    <div>
                    <% for( let i = 0; i < posteos.length; i++ ) { %>

                        <article class="comment">
                            <img src="<%= posteos[i].img %>" alt="" height="40px" width="40px">
                            <section class="content">
                                <a class="user" href="/user/detailuser"> <%= posteos[i].nombre %> </a>
                               
                                <span class="text"> <%= posteos[i].comentario %></span>
                            </section>
                        </article>
                
                        <% } %>
                       
                    </div>
                </section>
            </section>
        </div>
    </main>

    <%- include('./partials/footer') %> 
</body>

</html>